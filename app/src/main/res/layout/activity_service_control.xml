<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/service_control_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@color/black"
    tools:context=".ServiceControlActivity">

    <!-- ðŸ“¡ RSSI & MTU Info Block -->
    <!-- COPY YOUR EXISTING BLOCK HERE -->
    <!-- I use <include> here for clarity, but you can paste your full block inline if not using separate layout file -->
    <include layout="@layout/service_list_layout_headings" /> <!-- â† optional, see below -->

    <!-- ðŸ§¾ Header Row -->
    <!-- ðŸ§¾ Header Row -->



    <!-- ðŸ“‹ Expandable List View -->
    <ExpandableListView
        android:id="@+id/expandable_service_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:childDivider="@android:color/darker_gray"
        android:scrollbars="vertical"
        android:nestedScrollingEnabled="true"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:clipToPadding="false"
        android:clipChildren="false" />

    <ExpandableListView
        android:layout_gravity="bottom"
        android:id="@+id/feature_expandable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:groupIndicator="@null"
        android:visibility="gone"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:clipToPadding="false"
        android:clipChildren="false" />

</LinearLayout>
