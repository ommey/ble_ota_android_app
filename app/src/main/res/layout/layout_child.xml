<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/childRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <!-- Header shown only for first child -->
    <LinearLayout
        android:id="@+id/characteristicHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:paddingVertical="2dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/characteristicHeadTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.75"
            android:text="Characteristic UUID"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.75"
            android:text="Alias"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Characteristic row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/characteristicUUIDTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.75"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/customAliasTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.75"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

    <!-- Capabilities section (initially hidden) -->
    <LinearLayout
        android:id="@+id/capabilityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="4dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/capRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read: ✅"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/capWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write: ❌"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/capNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify: ✅"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/capIndicate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indicate: ❌"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>
