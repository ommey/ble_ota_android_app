<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/writeBlock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/characteristicTypeTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WRITE"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/writeResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waiting to send..."
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="4dp"
                android:maxLines="4"
                android:ellipsize="end"
                android:scrollHorizontally="false" />
        </LinearLayout>

        <ImageView
            android:id="@+id/writeInteractionIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/success" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/writeInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter value"
            android:textColor="@color/white"
            android:inputType="text" />

        <Button
            android:id="@+id/sendWriteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send" />
    </LinearLayout>
</LinearLayout>
