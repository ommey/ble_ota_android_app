<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanActivity"
    android:padding="15dp"
    >

    <!-- Header row -->
    <LinearLayout
        android:id="@+id/columnDescriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/frame"
        >

        <TextView
            android:id="@+id/RSSITextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="RSSI"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:foregroundGravity="bottom"
            android:background="@drawable/frame"

            />

        <TextView
            android:id="@+id/DeviceTypeTextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Type"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:foregroundGravity="bottom"
            android:background="@drawable/frame"
            />

        <TextView
            android:id="@+id/DeviceNameTextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Name"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:foregroundGravity="bottom"
            android:background="@drawable/frame"
            />

        <TextView
            android:id="@+id/DeviceAddressTextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Address"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:foregroundGravity="bottom"
            android:background="@drawable/frame"
            />

        <TextView
            android:id="@+id/LastSeenTextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Seen"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:foregroundGravity="bottom"
            android:background="@drawable/frame"
            />

    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/BLEDeviceRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/columnDescriptionLayout"
        app:layout_constraintBottom_toTopOf="@+id/bleSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Switch and label -->
    <Switch
        android:id="@+id/bleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="BLE scan"
        app:layout_constraintBottom_toTopOf="@+id/selectedBinaryText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/selectedBinaryText"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:text="@string/selectedBinary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/frame"
        android:textAlignment="center"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
