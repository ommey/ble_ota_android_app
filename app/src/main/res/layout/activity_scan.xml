<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanActivity"
    >

    <!-- Header row -->
    <LinearLayout
        android:id="@+id/columnDescriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/RSSITextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="start|center_vertical"
            android:text="dBm"
            />

        <TextView
            android:id="@+id/DeviceTypeTextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.75"
            android:textSize="12sp"
            android:gravity="start|center_vertical"
            android:text="Type"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/DeviceNameTextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1.8"
            android:textSize="12sp"

            android:gravity="start|center_vertical"
            android:text="Name"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/DeviceAddressTextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2.6"
            android:textSize="12sp"

            android:gravity="start|center_vertical"
            android:text="Address"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/LastSeenTextView_yymmdd"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:layout_weight="1.35"
            android:gravity="start|center_vertical"
            android:text="Seen"
            android:textStyle="bold"
            />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/BLEDeviceRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/columnDescriptionLayout"
        app:layout_constraintBottom_toTopOf="@+id/bleSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fadingEdge="horizontal"/>

    <!-- Switch and label -->
    <Switch
        android:id="@+id/bleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="BLE scan"
        app:layout_constraintBottom_toTopOf="@+id/selectedBinaryText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/selectedBinaryText"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:text="@string/selectedBinary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>
